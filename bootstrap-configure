#!/bin/sh

if [ -f config.status ]; then
	make maintainer-clean
fi

./bootstrap && \
    ./configure --enable-maintainer-mode \
		--enable-debug \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--libexecdir=/lib \
		--enable-all \
		--enable-glib \
		--enable-headset \
		--enable-network \
		--enable-input \
		--enable-echo \
		--disable-configfiles \
		--disable-initscripts \
		--disable-pcmciarules \
		--disable-sdpd \
		--disable-cups $*
